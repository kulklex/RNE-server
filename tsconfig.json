{
    "compilerOptions": {
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "esModuleInterop": true, // Allow default imports from CommonJS modules
      "skipLibCheck": true,
      "strict": true,
    },
    "include": ["src/**/*", "src/**/*.ts", "*.ts", "**/*.ts"],
    "exclude": ["node_modules"]
  }
  