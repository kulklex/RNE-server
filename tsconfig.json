{
    "compilerOptions": {
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "module": "ESNext",   // Use ES Modules
      "target": "ES6",
      "moduleResolution": "node",
      "esModuleInterop": true, // Allow default imports from CommonJS modules
      "skipLibCheck": true,
      "strict": false,
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts", "*.ts", "**/*.ts"],
    "exclude": ["node_modules"]
  }
  